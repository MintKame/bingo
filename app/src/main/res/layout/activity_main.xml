<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="60dp">
    </FrameLayout>

    <LinearLayout
        android:id="@+id/ll_main_radio"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:paddingTop="5dp">

        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_task"
                style="@style/rb_style"
                android:checked="true"
                android:drawableTop="@drawable/main_task"/>


            <RadioButton
                android:id="@+id/rb_reward"
                style="@style/rb_style"
                android:drawableTop="@drawable/main_reward"/>


            <RadioButton
                android:id="@+id/rb_analyze"
                style="@style/rb_style"
                android:drawableTop="@drawable/main_analyze"/>
        </RadioGroup>


    </LinearLayout>

</RelativeLayout>